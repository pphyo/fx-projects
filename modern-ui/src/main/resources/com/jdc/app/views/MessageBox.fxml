<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="node" stylesheets="@application.css" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.app.views.MessageBox">
   <styleClass>
      <String fx:value="login-frame" />
      <String fx:value="mb-vw-fr" />
      <String fx:value="spac10" />
      <String fx:value="pad10" />
      <String fx:value="ali-cl" />
   </styleClass>
   <children>
      <ImageView fx:id="img" fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" styleClass="img-vw">
         <image>
            <Image url="@../../../../imgs/cancel.png" />
         </image>
      </ImageView>
      <VBox styleClass="ali-cr" HBox.hgrow="ALWAYS">
         <children>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="lblMessage" styleClass="mb-fp" text="Label" />
               </children>
               <styleClass>
                  <String fx:value="ali-cl" />
                  <String fx:value="pad15-t" />
               </styleClass>
            </HBox>
            <HBox>
               <children>
                  <Button mnemonicParsing="false" onAction="#close" styleClass="btn" text="OK" />
               </children>
               <styleClass>
                  <String fx:value="ali-cr" />
                  <String fx:value="pad10-r" />
               </styleClass>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
